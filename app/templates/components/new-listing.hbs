{{#if addNewListing}}
  <h1>New Listing</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">username</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title"}}
        </div>


        <!-- next task: try to figure out what this needs to be -->
        <!-- <div class="form-group">
          <label for="category">Category</label>
          {{input value=model.category id="category"}}
        </div> -->

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="description">Description of your listing</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="cost">Price</label>
          {{input value=cost id="cost"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'listingFormShow'}}>New Listing</button>
{{/if}}
